---
import Layout from "../../layouts/Layout.astro";
import BotConnection from "../../components/BotConnection.astro";

const botId = Astro.url.searchParams.get("id") || "";
---

<Layout title="Bot Detail">
    <div
        x-data="botDetail"
        x-show="ready"
        class="space-y-8"
        style="display: none;"
    >
        <!-- Header -->
        <header
            class="flex flex-col lg:flex-row justify-between items-start lg:items-center border-b border-white/10 pb-6 relative gap-4"
        >
            <div class="cross-marker -bottom-[5px] -left-[5px]"></div>
            <div class="cross-marker -bottom-[5px] -right-[5px]"></div>

            <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                    <a
                        href="/bots"
                        class="text-gray-500 hover:text-brand-purple transition-colors"
                        title="Back to Bots"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 19l-7-7 7-7"></path>
                        </svg>
                    </a>
                    <span
                        class="text-[10px] font-mono text-brand-purple bg-brand-purple/10 px-2 py-0.5 uppercase"
                        x-text="bot.platform"></span>
                </div>

                <h1
                    class="text-3xl font-bold tracking-tighter uppercase"
                    x-text="bot.name"
                >
                </h1>
                <p
                    class="text-xs font-mono text-gray-500 mt-1"
                    x-text="bot.identifier"
                >
                </p>
            </div>

            <div class="flex gap-3">
                <button
                    @click="editBot()"
                    class="px-4 py-2 border border-white/10 text-gray-400 font-mono uppercase text-xs hover:bg-white/5 transition-colors rounded-full"
                    :title="$t('edit_bot')"
                >
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                        ></path>
                    </svg>
                </button>
                <button
                    @click="deleteBot()"
                    class="px-4 py-2 border border-red-500/30 text-red-500 font-mono uppercase text-xs hover:bg-red-500/10 transition-colors rounded-full"
                    :title="$t('delete_bot')"
                >
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                        ></path>
                    </svg>
                </button>
            </div>
        </header>

        <!-- Main Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Connection Panel -->
            <div class="lg:col-span-1">
                <div
                    class="bg-brand-panel/30 border border-white/5 p-1 relative"
                >
                    <div class="cross-marker -top-[2px] -left-[2px]"></div>
                    <div class="cross-marker -top-[2px] -right-[2px]"></div>

                    <div class="px-4 pt-4 mb-2">
                        <h3
                            class="text-xs text-brand-purple uppercase tracking-widest"
                            x-text="$t('connection')"
                        >
                        </h3>
                    </div>

                    <!-- BotConnection using Alpine re-initialization -->
                    <div x-show="botId" x-html="connectionHtml"></div>
                </div>
            </div>

            <!-- Webhook Configuration Panel -->
            <div class="lg:col-span-2">
                <div
                    class="bg-brand-panel/30 border border-white/5 p-6 relative"
                >
                    <div class="cross-marker -top-[2px] -left-[2px]"></div>
                    <div class="cross-marker -top-[2px] -right-[2px]"></div>

                    <h3
                        class="text-xs text-brand-purple uppercase tracking-widest mb-6"
                        x-text="$t('webhook_config')"
                    >
                        Webhook Configuration
                    </h3>

                    <!-- Webhook URL Form -->
                    <div class="space-y-6">
                        <!-- Webhook URL Input -->
                        <div>
                            <label
                                class="block text-xs text-gray-400 font-mono uppercase mb-2"
                                x-text="$t('webhook_url')"
                                >n8n Webhook URL</label
                            >
                            <div class="flex gap-2">
                                <input
                                    type="url"
                                    x-model="webhookUrl"
                                    class="flex-1 bg-black/30 border border-white/10 p-3 text-sm focus:border-brand-purple focus:outline-none text-white font-mono placeholder-gray-600"
                                    :placeholder="$t('webhook_url_placeholder')"
                                />
                                <button
                                    @click="saveWebhook()"
                                    :disabled="savingWebhook"
                                    class="px-6 py-3 bg-brand-purple text-white font-mono uppercase text-xs tracking-widest hover:bg-brand-purple/80 transition-colors disabled:opacity-50"
                                >
                                    <span
                                        x-text="savingWebhook ? $t('saving') : $t('save')"
                                        >Save</span
                                    >
                                </button>
                            </div>
                            <p
                                x-show="webhookSaved"
                                x-transition
                                class="text-green-400 text-xs font-mono mt-2"
                            >
                                ✔ Webhook saved successfully
                            </p>
                        </div>

                        <!-- API Key Display -->
                        <div class="pt-4 border-t border-white/5">
                            <label
                                class="block text-xs text-gray-400 font-mono uppercase mb-2"
                                x-text="$t('api_key')">API Key</label
                            >
                            <p class="text-[10px] text-gray-500 font-mono mb-3">
                                Use this key in the <code
                                    class="text-brand-purple">X-API-Key</code
                                > header when sending messages via POST /send
                            </p>
                            <div class="flex gap-2 items-center">
                                <div
                                    class="flex-1 bg-black/40 border border-white/10 p-3 text-sm font-mono text-gray-300 select-all break-all"
                                    x-text="apiKey || '—'"
                                >
                                </div>
                                <button
                                    @click="copyApiKey()"
                                    x-show="apiKey"
                                    class="px-4 py-3 border border-white/10 text-gray-400 font-mono uppercase text-xs hover:bg-white/5 transition-colors whitespace-nowrap"
                                >
                                    <span
                                        x-text="justCopied ? $t('copied') : $t('copy')"
                                        >Copy</span
                                    >
                                </button>
                            </div>

                            <button
                                @click="regenerateKey()"
                                :disabled="regenerating"
                                x-show="apiKey"
                                class="mt-4 px-4 py-2 border border-red-500/30 text-red-400 font-mono uppercase text-xs hover:bg-red-500/10 transition-colors disabled:opacity-50 rounded-full flex items-center gap-2"
                            >
                                <svg
                                    class="w-3.5 h-3.5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                                    ></path>
                                </svg>
                                <span
                                    x-text="regenerating ? $t('loading') : $t('regenerate_key')"
                                    >Regenerate Key</span
                                >
                            </button>
                        </div>

                        <!-- No Webhook State -->
                        <div
                            x-show="!webhookUrl && !loadingWebhook"
                            class="text-center py-8 border border-dashed border-white/10"
                        >
                            <svg
                                class="w-10 h-10 mx-auto mb-4 text-gray-600"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1"
                                    d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                                ></path>
                            </svg>
                            <p
                                class="text-xs font-mono text-gray-500 uppercase"
                                x-text="$t('no_webhook')"
                            >
                                No webhook configured
                            </p>
                            <p class="text-[10px] text-gray-600 font-mono mt-2">
                                Enter your n8n webhook URL above to start
                                forwarding messages
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading State -->
    <div
        x-data="botDetail"
        x-show="!ready && !error"
        class="flex items-center justify-center min-h-[60vh]"
    >
        <div
            class="text-brand-purple animate-pulse text-xs font-mono uppercase"
            x-text="$t('loading')"
        >
            Loading...
        </div>
    </div>

    <!-- Error State -->
    <div
        x-data="botDetail"
        x-show="error"
        class="flex items-center justify-center min-h-[60vh]"
    >
        <div class="text-center">
            <h1 class="text-4xl font-bold text-red-500 mb-4">404</h1>
            <p class="text-gray-500 font-mono uppercase mb-8" x-text="error">
            </p>
            <a
                href="/bots"
                class="px-6 py-3 bg-brand-purple text-white font-mono uppercase text-xs tracking-widest hover:bg-brand-purple/80 transition-colors"
            >
                ← Back to Bots
            </a>
        </div>
    </div>

    <!-- Edit Bot Modal -->
    <div
        x-data="botDetail"
        x-show="showEditModal"
        x-cloak
        class="fixed inset-0 z-50 flex items-center justify-center"
        style="display: none;"
    >
        <!-- Backdrop -->
        <div
            class="absolute inset-0 bg-black/70 backdrop-blur-sm"
            @click="showEditModal = false"
        >
        </div>

        <!-- Modal -->
        <div
            class="relative bg-brand-dark border border-white/10 p-8 w-full max-w-md"
        >
            <div class="cross-marker -top-[2px] -left-[2px]"></div>
            <div class="cross-marker -top-[2px] -right-[2px]"></div>
            <div class="cross-marker -bottom-[2px] -left-[2px]"></div>
            <div class="cross-marker -bottom-[2px] -right-[2px]"></div>

            <h2
                class="text-xl font-bold uppercase tracking-tight mb-6"
                x-text="$t('edit_bot') || 'Edit Bot'"
            >
                Edit Bot
            </h2>

            <form @submit.prevent="submitEditBot()" class="space-y-4">
                <div>
                    <label
                        class="block text-xs text-gray-400 font-mono uppercase mb-2"
                        x-text="$t('bot_name') || 'Name'"></label>
                    <input
                        type="text"
                        x-model="editForm.name"
                        required
                        class="w-full bg-black/30 border border-white/10 p-3 text-sm focus:border-brand-purple focus:outline-none text-white"
                        placeholder="My WhatsApp Bot"
                    />
                </div>

                <div>
                    <label
                        class="block text-xs text-gray-400 font-mono uppercase mb-2"
                        x-text="$t('bot_identifier') || 'Identifier'"></label>
                    <input
                        type="text"
                        x-model="editForm.identifier"
                        required
                        class="w-full bg-black/30 border border-white/10 p-3 text-sm focus:border-brand-purple focus:outline-none text-white"
                        placeholder="+1234567890"
                    />
                </div>

                <div class="flex gap-4 pt-4">
                    <button
                        type="button"
                        @click="showEditModal = false"
                        class="flex-1 px-4 py-3 border border-white/10 text-gray-400 font-mono uppercase text-xs hover:bg-white/5"
                        x-text="$t('cancel') || 'Cancel'"
                    >
                        Cancel
                    </button>
                    <button
                        type="submit"
                        :disabled="savingEdit"
                        class="flex-1 px-4 py-3 bg-brand-purple text-white font-mono uppercase text-xs hover:bg-brand-purple/80 disabled:opacity-50"
                        x-text="savingEdit ? ($t('loading') || 'Saving...') : ($t('save') || 'Save')"
                    >
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</Layout>

<script>
    declare const Alpine: any;
    import { ApiClient } from "../../lib/api";

    // TypeScript interfaces
    interface Bot {
        id: string;
        name: string;
        identifier: string;
        platform: "WHATSAPP" | "TELEGRAM";
        userId: string;
    }

    document.addEventListener("alpine:init", () => {
        Alpine.data("botDetail", () => ({
            botId: null as string | null,
            bot: {} as Bot,
            ready: false,
            error: null as string | null,
            connectionHtml: "",

            // Edit Bot State
            showEditModal: false,
            savingEdit: false,
            editForm: {
                name: "",
                identifier: "",
            },

            // Webhook State
            webhookUrl: "",
            apiKey: "",
            loadingWebhook: true,
            savingWebhook: false,
            webhookSaved: false,
            justCopied: false,
            regenerating: false,

            async init() {
                const params = new URLSearchParams(window.location.search);
                this.botId = params.get("id");

                if (!this.botId) {
                    this.error = "No bot ID provided";
                    return;
                }

                try {
                    // Fetch bot details
                    this.bot = await ApiClient.get(`/bots/${this.botId}`);

                    // Generate connection component HTML (will be hydrated by Alpine)
                    this.connectionHtml = this.generateConnectionHtml();

                    // Load webhook config
                    await this.loadWebhookConfig();

                    this.ready = true;

                    // Re-initialize Alpine on the injected content
                    // @ts-ignore
                    this.$nextTick(() => {
                        const container = document.querySelector(
                            '[x-html="connectionHtml"]',
                        );
                        if (container) {
                            Alpine.initTree(container);
                        }
                    });
                } catch (e: unknown) {
                    const error = e as Error;
                    this.error = error.message || "Bot not found";
                }
            },

            generateConnectionHtml(): string {
                return `
                    <div class="p-4" x-data="botConnection_${this.botId?.replace(/-/g, "_")}" x-init="init()">
                        <div class="space-y-4">
                            <div class="flex items-center gap-3">
                                <span class="w-3 h-3 rounded-full" :class="connected ? 'bg-green-500' : 'bg-gray-600'"></span>
                                <span class="text-sm font-mono" :class="connected ? 'text-green-400' : 'text-gray-400'" x-text="connected ? $t('active') : $t('disconnected')"></span>
                            </div>
                            <template x-if="qr && !connected">
                                <div class="bg-white p-4 w-fit">
                                    <img :src="qr" alt="QR Code" class="w-48 h-48" />
                                </div>
                            </template>
                            <template x-if="!connected && !qr">
                                <button @click="connect()" :disabled="loading" class="w-full px-4 py-2 bg-brand-purple text-white font-mono uppercase text-xs tracking-widest hover:bg-brand-purple/80 transition-colors disabled:opacity-50 rounded-full" x-text="loading ? $t('initializing') : $t('start_connection')"></button>
                            </template>
                            <template x-if="connected">
                                <button @click="disconnect()" :disabled="loading" class="w-full px-4 py-2 bg-red-500/20 text-red-400 border border-red-500/30 font-mono uppercase text-xs tracking-widest hover:bg-red-500/30 transition-colors disabled:opacity-50 rounded-full" x-text="loading ? $t('disconnecting') : $t('disconnect')"></button>
                            </template>
                        </div>
                    </div>
                `;
            },

            async loadWebhookConfig() {
                this.loadingWebhook = true;
                try {
                    const config = await ApiClient.get(
                        `/bots/${this.botId}/webhook`,
                    );
                    this.webhookUrl = config.webhookUrl || "";
                    this.apiKey = config.apiKey || "";
                } catch (e) {
                    console.error("Failed to load webhook config:", e);
                } finally {
                    this.loadingWebhook = false;
                }
            },

            async saveWebhook() {
                if (!this.webhookUrl) return;

                this.savingWebhook = true;
                this.webhookSaved = false;
                try {
                    await ApiClient.put(`/bots/${this.botId}/webhook`, {
                        webhookUrl: this.webhookUrl,
                    });
                    this.webhookSaved = true;
                    setTimeout(() => {
                        this.webhookSaved = false;
                    }, 3000);
                } catch (e: unknown) {
                    const error = e as Error;
                    alert(error.message || "Failed to save webhook");
                } finally {
                    this.savingWebhook = false;
                }
            },

            async copyApiKey() {
                if (!this.apiKey) return;
                try {
                    await navigator.clipboard.writeText(this.apiKey);
                    this.justCopied = true;
                    setTimeout(() => {
                        this.justCopied = false;
                    }, 2000);
                } catch (e) {
                    // Fallback for older browsers
                    const textArea = document.createElement("textarea");
                    textArea.value = this.apiKey;
                    document.body.appendChild(textArea);
                    textArea.select();
                    document.execCommand("copy");
                    document.body.removeChild(textArea);
                    this.justCopied = true;
                    setTimeout(() => {
                        this.justCopied = false;
                    }, 2000);
                }
            },

            async regenerateKey() {
                // @ts-ignore
                if (
                    !confirm(
                        this.$t("regenerate_confirm") ||
                            "Regenerate API key? The current key will stop working.",
                    )
                )
                    return;

                this.regenerating = true;
                try {
                    const result = await ApiClient.post(
                        `/bots/${this.botId}/regenerate-key`,
                        {},
                    );
                    this.apiKey = result.apiKey || result.key || "";
                } catch (e: unknown) {
                    const error = e as Error;
                    alert(error.message || "Failed to regenerate key");
                } finally {
                    this.regenerating = false;
                }
            },

            editBot() {
                this.editForm.name = this.bot.name;
                this.editForm.identifier = this.bot.identifier;
                this.showEditModal = true;
            },

            async submitEditBot() {
                if (!this.editForm.name || !this.editForm.identifier) return;

                this.savingEdit = true;
                try {
                    const updated = await ApiClient.put(`/bots/${this.botId}`, {
                        name: this.editForm.name,
                        identifier: this.editForm.identifier,
                        platform: this.bot.platform,
                    });
                    this.bot = updated;
                    this.showEditModal = false;
                } catch (e: unknown) {
                    const error = e as Error;
                    alert(error.message || "Failed to update bot");
                } finally {
                    this.savingEdit = false;
                }
            },

            async deleteBot() {
                const confirmed = confirm(
                    "Delete this bot? This action cannot be undone.",
                );
                if (!confirmed) return;

                try {
                    await ApiClient.delete(`/bots/${this.botId}`);
                    window.location.href = "/bots";
                } catch (e: unknown) {
                    const error = e as Error;
                    alert(error.message || "Failed to delete bot");
                }
            },
        }));

        // Dynamic registration of bot connection component
        const params = new URLSearchParams(window.location.search);
        const botId = params.get("id");
        if (botId) {
            const safeId = botId.replace(/-/g, "_");
            Alpine.data(`botConnection_${safeId}`, () => ({
                connected: false,
                loading: false,
                qr: null as string | null,
                pollInterval: null as ReturnType<typeof setInterval> | null,

                init() {
                    this.checkStatus();
                    this.pollInterval = setInterval(
                        () => this.checkStatus(),
                        3000,
                    );
                },

                destroy() {
                    if (this.pollInterval) clearInterval(this.pollInterval);
                },

                async checkStatus() {
                    try {
                        const status = await ApiClient.get(
                            `/bots/${botId}/status`,
                        );
                        this.connected = status.connected;
                        if (status.hasQr && !this.connected) {
                            const qrData = await ApiClient.get(
                                `/bots/${botId}/qr`,
                            );
                            this.qr = qrData.qr;
                        } else {
                            this.qr = null;
                        }
                    } catch (e) {
                        // Silent fail for status check
                    }
                },

                async connect() {
                    this.loading = true;
                    try {
                        await ApiClient.post(`/bots/${botId}/connect`, {});
                        // Start polling for QR
                        await this.checkStatus();
                    } catch (e: unknown) {
                        const error = e as Error;
                        alert(error.message || "Failed to start connection");
                    } finally {
                        this.loading = false;
                    }
                },

                async disconnect() {
                    // @ts-ignore
                    if (
                        !confirm(
                            this.$t("disconnect_confirm") ||
                                "Disconnect this bot from WhatsApp?",
                        )
                    )
                        return;

                    this.loading = true;
                    try {
                        await ApiClient.post(`/bots/${botId}/disconnect`, {});
                        this.connected = false;
                        this.qr = null;
                    } catch (e: unknown) {
                        const error = e as Error;
                        alert(error.message || "Failed to disconnect");
                    } finally {
                        this.loading = false;
                    }
                },
            }));
        }
    });
</script>
